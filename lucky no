import java.util.Scanner;

public class LuckGuessGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to the Luck Guess Game!");
        System.out.println("Enter a number between 1 and 5: ");
        int guess = scanner.nextInt();

        switch (guess) {
            case 1:
                System.out.println("Congratulations! You guessed the lucky number!");
                break;
            case 2:
                System.out.println("Sorry, try again next time!");
                break;
            case 3:
                System.out.println("Sorry, try again next time!");
                break;
            case 4:
                System.out.println("Sorry, try again next time!");
                break;
            case 5:
                System.out.println("Sorry, try again next time!");
                break;
            default:
                System.out.println("Invalid guess. Please enter a number between 1 and 5.");
        }
    }
}
